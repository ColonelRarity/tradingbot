# Render environment variables for production (example values)

# --- Binance Futures production endpoints (required for production) ---
BINANCE_FUTURES_BASE_URL=https://fapi.binance.com
BINANCE_FUTURES_WS_URL=wss://fstream.binance.com
ALLOW_PRODUCTION_TRADING=True

# --- Binance API keys (required) ---
BINANCE_FUTURES_API_KEY=your_futures_api_key
BINANCE_FUTURES_API_SECRET=your_futures_api_secret

# --- Core trading controls ---
TRADING_SYMBOL=BTCUSDT
MAX_PAIRS_TO_SCAN=150
DEFAULT_LEVERAGE=20
MAX_CONCURRENT_POSITIONS=10
MAX_POSITION_PERCENT=0.25
MAX_LOSS_PER_TRADE=2.0
DAILY_MAX_LOSS=50.0
DAILY_PROFIT_TARGET=20.0
MAX_UNREALIZED_LOSS=50.0

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=text

# --- Dry-run (simulate orders, no real trades) ---
DRY_RUN=True

# --- Telegram (optional) ---
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- ML / Learning (optional) ---
ENABLE_LEARNING=False
ML_MIN_CONFIDENCE=0.001

# --- SL/TP tuning (optional) ---
SL_BREAKEVEN_TRIGGER_USDT=10.0
SL_BREAKEVEN_TRIGGER_PERCENT=0.10
SL_TRAIL_ACTIVATION_PROFIT_USDT=1.0
SL_TRAIL_DISTANCE_ATR_MULT=0.8
SL_MIN_PROFIT_BUFFER_USDT=0.10
